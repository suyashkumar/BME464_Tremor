#include <iostream>
#include <mraa.hpp>


int main() {
  /* Setup your example here, code that should run once
   */
	mraa::Pwm* pwm;
	pwm = new mraa::Pwm(3);
	if (pwm == NULL) {
		return MRAA_ERROR_UNSPECIFIED;
	}
	pwm->enable(true);

  /* Code in this loop will run repeatedly
   */
  for (;;) {
	  pwm->config_ms(0.5,1); // Write 50% duty cycle period of 1ms

  }
  delete pwm;
  return 0;
}
