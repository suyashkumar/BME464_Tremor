#include <iostream>
#include <string.h>
#include <time.h>
#include <mraa.hpp>


int main() {

	mraa::Pwm* pwm;
	pwm = new mraa::Pwm(0);
	clock_t t;
	if (pwm == NULL) {
		return MRAA_ERROR_UNSPECIFIED;
	}
	if (pwm->enable(true) != MRAA_SUCCESS) {
		std::cerr << "Cannot enable PWM on mraa::PWM object, exiting" << std::endl;
		return MRAA_ERROR_UNSPECIFIED;
	}
	char buffer[20];
	float duty_cycle=0.5;
  for (;;) {

	  pwm->config_percent(1,0.5); // Write 50% duty cycle period of 1ms
	  usleep(500);
	  pwm->config_percent(1,1);
	  //pwm->period_us(500);

	  usleep(500);
  }
  delete pwm;
  return 0;
}
